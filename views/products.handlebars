<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="/src/public/css/style.css">
  <title>Document</title>
</head>
<body>
 <div class="container">
    <div class="row">
        {{#each products.payload}}
            <div class="col-md-4">
                <div class="card border-0 mb-3">
                    <div class="imgBx">
                    <a href="/products/{{this._id}}" class="text-decoration-none">
                        <img src="{{this.thumbnail}}" class="img-fluid" alt="{{this.title}}">
                    </a></div>
                    <div class="card-body text-center">
                        <div class="contentBx">
                        <p class="card-text text-dark">{{this.title}}<br><span class="text-danger">${{this.price}}</span></p>
                        <p><button class="btn btn-dark" onclick="agregarProductoAlCarrito('{{this._id}}')">Agregar (+)</button></p>
                    </div>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
    <div class="row my-5">
        <div class="col">
            <nav>
                <ul class="pagination justify-content-center">
                    {{#if products.hasPrevPage}}
                        <li class="page-item">
                            <a class="page-link" href="{{products.prevLink}}"><<</a>
                        </li>
                    {{/if}}
                    {{#if products.hasPrevPage}}
                        <li class="page-item">
                            <a class="page-link" href="{{products.prevLink}}">{{products.prevPage}}</a>
                        </li>    
                    {{/if}}
                    <li class="page-item">
                        <a class="page-link">{{products.page}}</a>
                    </li>
                    {{#if products.hasNextPage}}
                        <li class="page-item">
                            <a class="page-link" href="{{products.nextLink}}">{{products.nextPage}}</a>
                        </li>    
                    {{/if}}
                    {{#if products.hasNextPage}}
                        <li class="page-item">
                            <a class="page-link" href="{{products.nextLink}}">>></a>
                        </li>
                    {{/if}}
                </ul>
            </nav>
        </div>
    </div>
</div>
</body>
<script src="/src/public/cart.js"></script>
</html>
